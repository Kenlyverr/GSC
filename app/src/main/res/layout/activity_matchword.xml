<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Matchword">

    <LinearLayout
        android:id="@+id/layoutObject"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp">

        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/txtObject"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="Luyện nghe"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/layoutObject"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/layoutO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibtnObject"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/object_black" />

            <TextView
                android:id="@+id/txtO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Chủ đề"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibtnLuggage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/luggage_blue" />

            <TextView
                android:id="@+id/txtGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#14AFB4"
                android:text="Games"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibtnAnchor"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/anchor_black" />

            <TextView
                android:id="@+id/txtCoutinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luyện tập"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_15sdp"
            android:text="Điểm"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="46dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/background_input"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="0/10" />

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:max="100"
            android:progress="50"
            android:background="@drawable/background_input"
            android:theme="@style/ProgressBarTheme" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnVocabu1"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="grandfather"
            android:background="@drawable/vien"
            />

        <Button
            android:id="@+id/btnMeanVocabu1"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:text="mẹ"
            android:background="@drawable/vien"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnVocabu2"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="uncle"
            android:background="@drawable/vien"
            />

        <Button
            android:id="@+id/btnMeanVocabu2"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:text="anh(em) trai"
            android:background="@drawable/vien"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnVocabu3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="father"
            android:background="@drawable/vien"
            />

        <Button
            android:id="@+id/btnMeanVocabu3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:text="cháu trai"
            android:background="@drawable/vien"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnVocabu4"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="brother"
            android:background="@drawable/vien"
            />

        <Button
            android:id="@+id/btnMeanVocabu4"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:text="chị(em) gái"
            android:background="@drawable/vien"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnVocabu5"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="mother"
            android:background="@drawable/vien"
            />

        <Button
            android:id="@+id/btnMeanVocabu5"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:text="chú"
            android:background="@drawable/vien"
            />
    </LinearLayout>

</LinearLayout>