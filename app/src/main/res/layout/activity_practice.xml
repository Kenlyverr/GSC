<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Practice">

    <LinearLayout
        android:id="@+id/layoutObject"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp">

        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/txtObject"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="Luyện Tập"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/layoutObject"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/layoutO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibtnObject"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/object_black" />

            <TextView
                android:id="@+id/txtO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Chủ đề"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibtnLuggage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/luggage_black" />

            <TextView
                android:id="@+id/txtGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Games"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibtnAnchor"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/anchor_blue" />

            <TextView
                android:id="@+id/txtCoutinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luyện tập"
                android:textColor="#14AFB4"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="245dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/grandfather"
                />
            <ImageButton
                android:id="@+id/ibtnSound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sound"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/txtSpell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ˈɡran(d)ˌfäT͟Hər/"
                android:textSize="18sp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/txtVocabulary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grandfather"
                android:textSize="18sp"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/line"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ví dụ:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="+ He came when I was playing chess with my grandfather"
                android:textSize="18dp"
                />
            <ImageButton
                android:id="@+id/ibtnSound2"
                android:layout_marginLeft="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/play"
                android:layout_gravity="center"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/line"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="+ My grandfather plants many different trees in his garden"
                android:textSize="18dp"
                />
            <ImageButton
                android:id="@+id/ibtnSound3"
                android:layout_marginLeft="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/play"
                android:layout_gravity="center"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/line"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Chọn nghĩa của từ được chọn:"
            android:textColor="#000000"
            android:textStyle="bold"
            />
        <RadioGroup
            android:id="@+id/rbtngroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <RadioButton
                android:id="@+id/rbtn_uncle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chú, bác trai, cậu" />

            <RadioButton
                android:id="@+id/rbtn_son"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cháu trai (con anh,chị,em)" />

            <RadioButton
                android:id="@+id/rbtn_grandfather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ông nội" />

            <RadioButton
                android:id="@+id/rbtn_brother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Em trai" />

        </RadioGroup>
    </LinearLayout>

</LinearLayout>